<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
<!--        <item name="android:splitMotionEvents">true</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ViewLabelStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/view_label_size</item>
    </style>

    <style name="AppTheme.SwitchStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@null</item>
    </style>

    <style name="AppTheme.SwitchLabelStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
